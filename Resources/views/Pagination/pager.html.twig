{% if pageCount > 1 %}
    <ul class="pager">
        {# previous #}
        {% if previous is defined %}
            <li class="previous">
                <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}">&lsaquo;</a>
            </li>
        {% else %}
            <li class="previous disabled">
                <span>&lsaquo;</span>
            </li>
        {% endif %}

        {# next #}
        {% if next is defined %}
            <li class="next">
                <a href="{{ path(route, query|merge({(pageParameterName): next})) }}">&rsaquo;</a>
            </li>
        {% else %}
            <li class="next disabled">
                <span>&rsaquo;</span>
            </li>
        {% endif %}
    </ul>
{% endif %}
