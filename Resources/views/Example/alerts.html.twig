{% extends 'SeegnoBootstrapBundle:Example:base.html.twig' %}

{% block title %}{{ parent() }} - Alerts{% endblock %}

{% block content %}
    <header class="page-header">
        <h1>Alerts</h1>
    </header>

    <section role="region">
        <h2>Examples</h2>
        <p>Rendering all flashes from <code>Flashbag</code>.</p>

        {{ seegno_bootstrap_alerts() }}
    </section>

    <hr>

    <section role="region">
        <h2>Custom alert</h2>
        <p>You can use <code>seegno_bootstrap_alert</code> twig function to render an alert.</p>

        {{ seegno_bootstrap_alert('success', 'This is a custom alert without the dismissable option disabled.', false) }}
    </section>
{% endblock %}
